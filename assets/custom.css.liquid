/* Heading Fonts */ 
{% if settings.heading__font_custom != blank %}
  {%- liquid
    assign heading_filename = settings.heading__font_custom | split: '.' | first
    assign heading_format = settings.heading__font_custom | split: '.' | last 
  -%}
  @font-face {
    font-family: "{{ heading_filename | capitalize | replace: '-', ' ' }}";
    src: url({{ settings.heading__font_custom | file_url }}) format("{{ heading_format }}");
    font-style: normal;
  }

  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: "{{ heading_filename | capitalize | replace: '-', ' ' }}", {{ settings.heading__font.fallback_families }} !important;
  }
{% endif %}


