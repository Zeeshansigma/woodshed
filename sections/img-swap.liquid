<style>
    .about-sec{
    display: flex;
    align-items: center;
    column-gap: 55px;
    width: 100%;
    max-width: 95%;
    margin-left: auto;
    margin-right: auto;
    margin-top: {{ section.settings.about_space_top }}px;
    margin-bottom: {{ section.settings.about_space_Bottom }}px;

}
.about-content{
    width: 100%;
    max-width: 50%;
}
.about-img{
    width: 100%;
    max-width: 50%;
}
.about-img img{
    width: 100%;
    height: 100%;
}
.about-false{
    display: none;
    
}
.about-true{
    display: inline-block;
    padding: 8px 16px;
    background: #C1A058;
    color: white;
    text-decoration: none;
    font-size: 20px;
    text-transform: uppercase;
    font-weight: 700;
    margin-top: 21px;
    font-family: "Mreavessanot bold";
}
.about-true:hover{
    color: white;
}
.about-sec.swap-true {
    flex-direction: row-reverse;
}
.about-content p{
    line-height: normal;
    font-family: "Verdana Pro", sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: #1F4A50;

}
.about-content.width-set-true{
  max-width: 55%;
}
.about-img.width-set-true{
  max-width: 45%;

}
@media screen  and (max-width:768px) {
    .about-sec{
        display: grid;
        grid-template-columns: repeat(1fr);
        margin-top: 24px;
    margin-bottom: 24px;
    }
    .about-content{
        max-width: 90%;
        margin: 0 auto;
        order: 2;
        text-align: center;
    }
    .about-content p{
        font-size: 16px;
        margin-top: 24px;
        text-align: left;
    }
    .about-img{
        max-width: 100%;
        margin-top: 24px;
        order: 1;
    }
    .about-sec.swap-true{
        flex-direction: unset;
    }
    .about-content.width-set-true{
  max-width: 100%;
}
.about-img.width-set-true{
  max-width: 100%;

}
}
</style>
<div class="about-sec swap-{{ section.settings.swap-section }}">
    <div class="about-content width-set-{{ section.settings.width_increase }}"> 
{{ section.settings.Text-about }}
<a class="about-{{ section.settings.show_about_btn }}" href=" {{ section.settings.button_link_about }} "> {{ section.settings.about_btn }} </a>
    </div>
    <div class="about-img width-set-{{ section.settings.width_increase }}">
       <img src="{{ section.settings.with_text_image |  img_url: 'master' }}" alt=""> 
    </div>
</div>


{% schema %}
    {
      "name": "Image-with-text",
      "settings": [
        {
  "type": "richtext",
  "id": "Text-about",
  "label": "ADD Paragraph"
},
{
  "type": "image_picker",
  "id": "with_text_image",
  "label": "ADD Image"
},
{
  "type": "range",
  "id": "about_space_top",
  "min": 50,
  "max": 100,
  "step": 10,
  "unit": "px",
  "label": "ADD Space Top",
  "default": 60
},
{
  "type": "range",
  "id": "about_space_Bottom",
  "min": 50,
  "max": 100,
  "step": 10,
  "unit": "px",
  "label": "ADD Space Bottom",
  "default": 60
},
{
    "type": "text",
    "id": "about_btn",
    "label": "ADD Btn Text"
},
{
  "type": "url",
  "id": "button_link_about",
  "label": "Button link"
},
{
  "type": "checkbox",
  "id": "show_about_btn",
  "label": "Show Button",
  "default": false
},
{
  "type": "checkbox",
  "id": "swap-section",
  "label": "Image Swap",
  "default": false
},
{
  "type": "checkbox",
  "id": "width_increase",
  "label": "Width Increase Content",
  "default": false
}







      ],
      "presets": [
        {
          "name": "Image-with-text"
        }
      ]
    }

    {% endschema %}