<style>
     .press-tab{
        display: flex;
        width: 100%;
        max-width: 80%;
        margin: 40px auto;
        border: 5px solid #C1A058;
        align-items: center;
    }
    .press-tab-logo{
        width: 100%;
        max-width: 40%;
        text-align: center;
    }
    .press-tab-content{
        width: 100%;
        max-width: 40%;
    }
    .press-tab-img{
        width: 100%;
        max-width: 20%; 
    }
    .press-tab-logo img{
        width: 100%;
        max-width: 65%;
        
    }
    .press-tab-img img{
        width: 100%;
    }
    .press-tab-content a{
        background: #C1A058;
        padding: 8px 16px;
        font-size: 20px;
        font-weight: 700;
        text-transform: uppercase;
  font-family: Mr Eaves Mod OT, sans-serif;
  display: inline-block;
  margin-top: 16px;
  color: white;

    }
    .press-tab-content a:hover{
        color: white;
    }
    .press-tab-content h3{
        font-size: 24px;
  font-family: Mr Eaves Mod OT, sans-serif;
  color: #1F989E;
  font-weight: 700;
  text-transform: uppercase;
  line-height: normal;
    }
    .press-tab-content p{
        color: #1F4A50;
        font-family: "Verdana Pro", sans-serif;
        font-size: 20px;
font-weight: 400;
line-height: normal;
margin-top: 16px;
    }

</style>

<div class="press-tab">
    {% for block in section.blocks %}
    <div class="press-tab-logo">
        <img src="{{ block.settings.first_image |  img_url: 'master' }}" alt="">
    </div>
    <div class="press-tab-content">
        <h3> {{ block.settings.Press_title }} </h3>
        <p> {{ block.settings.Press_subtitle }} </p>
        <a href=" {{ block.settings.Press_btn_link }} "> {{ block.settings.Press_btn }} </a>
    </div>
    <div class="press-tab-img">
        <img src=" {{ block.settings.second_image |  img_url: 'master' }} " alt="">
    </div>
    {% endfor %}
</div>



{% schema %}
    {
      "name": "Press-Tab",
      "settings": [
        
      ],
      "blocks": [
         {
           "name": "Slide",
           "type": "slide",
           "settings": [
             {
               "type": "image_picker",
               "id": "first_image",
               "label": "ADD Brand Image"
             },
             {
                "type": "text",
                "id": "Press_title",
                "label": "ADD Title"
             },
             {
                "type": "text",
                "id": "Press_subtitle",
                "label": "ADD Title"
             },
             {
                "type": "text",
                "id": "Press_btn",
                "label": "ADD Button"
             },
             {
                "type": "url",
                "id": "Press_btn_link",
                "label": "ADD Button Link"
             },
             {
                "type": "image_picker",
               "id": "second_image",
               "label": "ADD Texture Image"
             }
           ]
         }
      ],
      "presets": [
        {
          "name": "Press-Tab"
        }
      ]

    }
    {% endschema %}