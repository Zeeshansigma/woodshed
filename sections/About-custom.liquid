          "label": "ADD Header Image Laptop" 
        },
        {
          "type": "image_picker",
          "id": "bg-about",
          "label": "ADD Header Image Big" 
        },
        {
          "type": "image_picker",
          "id": "bg-about_tab",
          "label": "ADD Header Image TAblet" 
        },
        {
          "type": "image_picker",
          "id": "bg-about_mbl",
          "label": "ADD Header Image Mobile" 
        },
        {
            "type":"text",
            "id": "banner-text",
            "label": "ADD Banner Title"
        }
      ],
      "presets": [
        {
          "name": "About-Page"
        }
      ]
    }
    
    {% endschema %}