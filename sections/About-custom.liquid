<style>
    .bg-about-header{
        background:url( {{ section.settings.bg-about_laptop |  img_url: 'master' }});
    background-size:cover;
    background-position:center center;
padding: 95px 0;

    }
   .bg-about-header h2{
    color: #FFF;
text-align: center;
font-size: 58px;
font-style: normal;
font-weight: 700;
line-height: normal;
text-transform: uppercase;
   }
   @media screen and (max-width:768px) {
    .bg-about-header{
        background: url( {{ section.settings.bg-about_mbl | img_url: 'master' }});
        background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    min-height: 156px;
    display: flex;
    align-items: center;
    justify-content: center;
}
      }
    
   @media screen and (min-width:769px) and (max-width:1200px) {
    .bg-about-header{
      background: url( {{ section.settings.bg-about_tab | img_url: 'master' }});
      background-size: cover;
    min-height: 240px;
    background-position: center center;
    }
   }
   @media screen and (min-width:1441px) {
    .bg-about-header{
        background: url({{ section.settings.bg-about | img_url: 'master' }});
        background-size: cover;
        min-height: 240px;
        background-position: center center;
    }
}
</style>
<div class="bg-about-header">
    <h2> {{ section.settings.banner-text }} </h2>
</div>
